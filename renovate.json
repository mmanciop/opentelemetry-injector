{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    "helpers:pinGitHubActionDigestsToSemver",
    "schedule:weekly"
  ],
  "packageRules": [
    {
      "groupName": "all",
      "matchUpdateTypes": ["minor", "major", "patch"],
      "schedule": ["before 8am on Monday"]
    }
  ],
  "labels": [
    "dependencies"
  ]
}
